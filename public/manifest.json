{
  "manifest_version": 3,
  "name": "Kazifi",
  "version": "1.0.0",
  "description": "Kazifi Chrome Extension.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "32": "vite.svg"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
